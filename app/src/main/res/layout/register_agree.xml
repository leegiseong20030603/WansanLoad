<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="동의 약관"
                android:textSize="30dp"
                android:gravity="center"/>

            <LinearLayout
                android:background="@drawable/box_background"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <CheckBox
                    android:buttonTint="#00C7E1"
                    android:theme="@style/AgreeCheckBox"
                    android:checked="false"
                    android:id="@+id/personalInformation"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="개인정보 동의약관 (필수)"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/personalInformationText"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:text="@string/personalInformationText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/box_background"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <CheckBox
                    android:buttonTint="#00C7E1"
                    android:theme="@style/AgreeCheckBox"
                    android:checked="false"
                    android:id="@+id/marketing"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="마케팅 동의약관 (선택)"/>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/marketingText"
                        android:text=""
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </ScrollView>

            </LinearLayout>

            <Button
                android:layout_marginBottom="10dp"
                android:id="@+id/agree"
                android:layout_marginTop="30dp"
                android:text="확인"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/box_background" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>