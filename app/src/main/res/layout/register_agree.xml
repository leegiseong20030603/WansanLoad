<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="동의 약관"
                android:textSize="30dp"
                android:gravity="center"/>

            <CheckBox
                android:checked="false"
                android:theme="@style/AgreeCheckBox"
                android:buttonTint="@color/AgreeCheckBoxColor"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/box_background"
                android:id="@+id/AgreeAllCheck"
                android:layout_marginTop="20dp"
                android:text="모두 동의하기"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />

            <LinearLayout
                android:background="@drawable/box_background"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <CheckBox
                    android:buttonTint="@color/AgreeCheckBoxColor"
                    android:theme="@style/AgreeCheckBox"
                    android:checked="false"
                    android:id="@+id/personalInformation"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="개인정보 및 앱 사용 동의약관 (필수)"/>

                <LinearLayout
                    android:id="@+id/personalInformationView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/personalInformationText"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="자세히보기"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/box_background"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">

                <CheckBox
                    android:buttonTint="@color/AgreeCheckBoxColor"
                    android:theme="@style/AgreeCheckBox"
                    android:checked="false"
                    android:id="@+id/marketing"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="마케팅 동의약관 (선택)"/>

                <LinearLayout
                    android:id="@+id/marketingView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/marketingText"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000000" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="자세히보기"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>


            <Button
                android:layout_marginBottom="10dp"
                android:id="@+id/agree"
                android:layout_marginTop="30dp"
                android:text="확인"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/box_background" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>